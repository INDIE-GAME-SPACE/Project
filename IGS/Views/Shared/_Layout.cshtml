﻿<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
<title>@ViewData["Title"] - IGS</title> 
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
<link rel="stylesheet" href="~/IGS.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/IGS.style.css" asp-append-version="true" />


</head>
<body>
<header>
	<nav>
		<a asp-controller="Home" asp-action="Index"><span style="color:white; font-family:Impact; font-size:30px;">IGS</span></a>
		<form>
		  <input type="text" value="Search"><br>
		</form>
			@if (!User.Identity.IsAuthenticated)
			{
				<a asp-controller="Account" asp-action="Login" class = "logIn">Вход</a>
				<p>Privet</p>
			}
			@if (User.Identity.IsAuthenticated)
			{
				<div class="dropdown">
					<button class="dropbtn">@User.Identity.Name</button>
						<div class="dropdown-content">
							<a>Профиль</a>
							<a asp-controller="Account" asp-action="Logout">Выход</a>
						</div>
				</div>
			}
</nav>
</header>
<div class="container-fluid col-xl-12">
	<main role="main">
			@RenderBody()
	</main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("pageScripts", required: false)
</body>
</html>